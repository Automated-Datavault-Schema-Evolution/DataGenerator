# Dockerfile.initial
FROM python:3.9-slim

# Prevent Python buffering and set working directory
ENV PYTHONUNBUFFERED=1
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt /app/
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copy application code (including .env and all generators)
COPY . /app

# The initial data generator should run once and then exit.
CMD ["python", "initial_data_generator/main.py"]
